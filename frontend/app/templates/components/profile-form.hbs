{{#form-for for=model onSubmit="saveProfile"}}

  {{#unless forOnboarding}}
    {{#form-field for="screenName" label="Screen Name"}}
      {{input value=model.screenName placeholder="Your public username"}}
    {{/form-field}}
  {{/unless}}

  {{#form-field for="country" label="Country"}}
    {{#power-select options=countries
                    placeholder="Select a country"
                    selected=model.country
                    onchange=(action (mut model.country))
                    renderInPlace=true
                    searchEnabled=false
                    class="fs-private"
                    as |country| }}
      {{country.name}}
    {{/power-select}}
  {{/form-field}}

  {{#form-field for="birthDate" label="Birth Date"}}
    {{input type="date" class="fs-private" value=model.birthDate}}
  {{/form-field}}

  {{#form-field for="sex" label="Sex" class="fs-private"}}
    {{#each sexes as |sex|}}
      {{#radio-button name="sex" value=sex.id groupValue=selectedSexId changed="sexChanged"}}
        {{sex.name}}
      {{/radio-button}}
    {{/each}}
  {{/form-field}}

  <br>

  {{#form-field for="notify" label="Email me when someone responds to my posts"}}
    {{label-switch
      checked=(mut model.notify)
      bgColorClass="colorable-bg-35"
    }}
  {{/form-field}}

  {{#if showReminder}}
    {{add-reminder model=model title=(t "step.onboarding.reminder.title")}}
  {{/if}}

  {{#unless forOnboarding}}
    <br>
    {{input type="submit" value="Save"}}
  {{/unless}}

{{/form-for}}
