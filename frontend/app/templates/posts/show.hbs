<div class="pull-down"></div>
{{ navigation-links title='Post page' optionObjects=foundTopics onSearch=(action "searchObjects") onGo=(action "goToTopic") isAuthenticatedUser=session.isAuthenticated}}

<div class="flaredown-post-page vert-offset-top-1">
<header class="flaredown-transparent-box centered">
  <h3>{{post.title}}</h3>
</header>

<div class="flaredown-white-box">
  <p class="colorable-clr-38">{{post.userName}}</p>
  <p>{{post.bodyWithBr}}</p>

  {{posts/post-topics post=post}}

  {{emoji-reactions reactable=post isAuthenticatedUser=session.isAuthenticated}}

  {{share-socials url=post.show title=post.title text=post.body}}

  {{#each post.comments as |comment|}}
    {{posts/post-comment comment=comment isAuthenticatedUser=session.isAuthenticated}}
  {{/each}}
</div>

{{#if session.isAuthenticated}}
  <div class="flaredown-white-box">
    {{textarea value=newComment.body placeholder="Leave a comment..."}}

    <button {{action "submitComment"}} class="primary-btn" disabled={{disabled}}>Submit</button>
  </div>
{{/if}}

{{#unless session.isAuthenticated}}
  {{additional-info}}
  {{join-footer}}
{{/unless}}
</div>
