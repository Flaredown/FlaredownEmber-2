<header class="centered">
  <h4>Discussions</h4>
</header>

<div>
  {{link-to myTopicsText "posts.followings"}}
  {{link-to "My posts" "posts.profile"}}
  {{link-to "New post" "posts.new"}}
</div>

<div class="flaredown-white-box">
  {{input type="text" value=query placeholder="Search..."}}
</div>

{{#each model.posts as |post|}}
  {{posts/topic-post post=post}}
{{/each}}

{{ember-ic-you triggerDistance=40}}

{{#if loadingPosts}}
  {{partial "application/three-bounce-spinner"}}
{{/if}}

